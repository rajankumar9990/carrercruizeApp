<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <!-- Job Title -->
    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:layout_marginBottom="10sp"
        android:background="#0288D1"
        android:gravity="center"
        android:text="DESCRIPTION"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/jobTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="8dp"
        android:text="Job Title"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Company Name -->
    <TextView
        android:id="@+id/companyNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Company Name"
        android:layout_marginLeft="10sp"
        android:textSize="18sp"
        android:layout_marginBottom="4dp"/>

    <!-- Date Posted -->
    <TextView
        android:id="@+id/datePostedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Posted: DD/MM/YYYY"
        android:textSize="14sp"
        android:layout_marginRight="10sp"
        android:layout_gravity="end"
        android:layout_marginBottom="4dp"/>

    <!-- Job Details -->
    <TextView
        android:id="@+id/jobDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job Details"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="10sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Experienced Required CardView -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="15sp"
        app:cardCornerRadius="10sp"
        android:layout_margin="10sp"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/experienceRequiredLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience Required"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/experienceValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="2 years" />

                <!-- Add similar layout for Job Location and Salary Offered -->

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/joblocationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Location"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/joblocationValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="sonipat,Haryana" />

                <!-- Add similar layout for Job Location and Salary Offered -->

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/salaryofferedLabelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salary Offered"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/salaryofferedValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Not Disclosed" />

                <!-- Add similar layout for Job Location and Salary Offered -->

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>




    <!-- Job Description CardView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/jobDescriptionLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Description"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/jobDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#656565"
            android:layout_marginTop="10sp"
            android:text="Detailed job description goes here. Include information about responsibilities, qualifications, etc."/>

    </LinearLayout>

</LinearLayout>
